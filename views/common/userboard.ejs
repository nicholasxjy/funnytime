<% if (locals.c_user) { %>
    <div class="left-wrap">
        <div class="user-card">
            <div class="user-avatar">
               <img class="img-circle img-responsive"
               src="/images/default.png" alt="avatar"
               width="80" height="80">
               <div class="user-info">
                   <h1>
                       <a href="/u/<%= locals.c_user.name %>/"><%= locals.c_user.name %></a>
                   </h1>
                   <p class="user-join-time">创建于 <%= locals.c_user.format_create_time %></p>
               </div>
            </div>
            <ul class="list-inline user-info-list">
                <li>
                    <a href="#">
                        <span class="post-items">发表</span>
                        <span class="post-item-count">9</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="following-users">关注中</span>
                        <span class="following-users-count">32</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="followed-users">已关注</span>
                        <span class="followed-users-count">2</span>
                    </a>
                </li>
            </ul>
            <p class="user-profile">
                <%= locals.c_user.profile %>
            </p>
        </div>
    </div>
<% } %>