<div class="hot-share left-block-wrap">
    <div class="hot-share-title">
        <h3>热门</h3>
    </div>
    <div class="hot-list-wrap">
        <ul class="list-unstyled hot-list">
            <% if (locals.hots && locals.hots.length > 0) { %>
                <% locals.hots.forEach(function(hot) { %>
                <li>
                    <a href="/joke/<%= hot._id %>">#<%= hot._id %># - <%= hot.like_count %>人赞过 </a>
                </li>
                <% }); %>
            <% } %>
        </ul>
    </div>
</div>